---
interface Props {
	isGalleryPage: boolean;
}

const { isGalleryPage } = Astro.props;
---

<div class:list={['side-by-side', { "gallery-page-style": isGalleryPage}, { "jacl-page-style": !isGalleryPage}]}>
  <div class="tab" id="gallery">
    <a href={isGalleryPage ? "" : "/gallery"}>
      <div class="tab-flex">
        <img
          class="tab-logo"
          src="/Gallery_Logo.png"
          alt="logo"
        />
        <span>Remembrance Gallery</span>
      </div>
    </a>
  </div>
  <div class="tab" id="jacl">
    <a href={isGalleryPage ? "/about" : ''}>
      <div class="tab-flex">
        <span>Puyallup Valley JACL</span>
        <img
          class="tab-logo"
          src="/PV-JACL-logo.svg"
          alt="logo"
        />
      </div>
    </a>
  </div>
</div>

<style lang="scss">
  .side-by-side {
    font-family: Palatino, "Palatino Linotype", "Palatino LT STD", "Book Antiqua", Georgia, serif;
    display: flex;
    justify-content: space-between;
    background-color: white;
    margin: 0 1rem;
    .tab {
      padding:0.1rem 1rem;
      border: gray solid 1px;
      border-top-left-radius: 1rem;
      border-top-right-radius: 1rem;
      margin-top:0.25rem;
      border-bottom: none;
      a {
        color: black;
        text-decoration: none;
        display:block;
        font-size:clamp(.9rem, 2.7vw, 1.3rem);
      }
      .tab-logo {
        width: clamp(1.4rem, 4w, 3rem);
        height:clamp(1.4rem, 4vw, 3rem);
      }
    }
    &.gallery-page-style {
      #gallery {
        background-color: white;
        &:hover {
          background-image: white;
        }
      }
      #jacl {
        color:darkslategrey;
        box-shadow: inset 0px 4px 5px 0px rgba(0,0,0,0.3);
        background-image: linear-gradient(rgb(197, 211, 196) 70%, rgb(160, 188, 159));
        a {
          color:darkolivegreen;
        }
        &:hover {
          background-color: rgba(243, 194, 251, 0.5);
          background-image:none;
        }
        border-bottom: gray solid 1px;
      }
    }
    &.jacl-page-style {
      #jacl {
        background-color: rgb(242,238,248);
        &:hover {
          background-image:white;
        }
      }
      #gallery {
        box-shadow: inset 0px 4px 5px 0px rgba(0,0,0,0.3);
        border-bottom: gray solid 1px;
        background-image: linear-gradient(rgba(243, 194, 251, 0.5) 70%, rgb(220, 192, 224));
        a {
          color:darkolivegreen;
        }
        &:hover {
          background-image: none;
          background-color: #dad7c5;
        }
      }
    }
    .tab-flex {
      display: flex;
      align-items: center;
      gap:0.5rem;
    }
  }
</style>